@using MVCQLKS.Models

@model UserInfo

@section style{
    <link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <style type="text/css">
        .error {
            color: red;
        }

        label {
            font-weight: bold;
        }
    </style>
}

@section script{
    <script src="~/Content/js/jquery.validate.min.js"></script>
    <script type="text/javascript">
        $("#frmUpProfile").validate({
            rules: {
                UserName: "required",
                Name: "required",
            },
            messages: {
                UserName: "Bạn cần điền Tên Đăng nhập!",
                Name: "Bạn cần nhập Họ và tên!"
            }
        });
    </script>
}

@section ContentHeader{
    Thông tin Tài khoản
}

<div class="row">
    @using (Html.BeginForm("UpdateProfile", "Account", FormMethod.Post, new { @class = "form-horizontal", id = "frmUpProfile" }))
    {
        <div class="form-group">
            @Html.HiddenFor(m => m.UserID)
        </div>
        <div class="control-group">
            @Html.LabelFor(m => m.UserName, "Tên Đăng nhập:", new { @class = "col-sm-4 control-label" })
            <div class="col-md-6 form-control-static">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Username" })
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => m.Name, "Họ và tên:", new { @class = "col-sm-4 control-label" })
            <div class="col-md-6 form-control-static">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-md-6 form-control-static">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-check"></i>
                    Cập nhật
                </button>
            </div>
        </div>
    }
</div>

