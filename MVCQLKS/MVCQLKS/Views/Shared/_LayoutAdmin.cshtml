@using MVCQLKS.Ultilities

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/css/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/css/font-awesome.min.css" />

    @if (IsSectionDefined("style"))
    {
        @RenderSection("style")
    }
    <style type="text/css">
        .caption-green {
            color: forestgreen;
        }

        .caption-red {
            color: red;
            font-weight: bold;
        }

        .caption-bold {
            font-weight: bold;
        }

        .input-validation-error {
            border: 2px solid #f00;
            background-color: #fee;
        }

        input[type="checkbox"].input-validation-error {
            outline: 2px solid #f00;
        }

        .validation-summary-errors {
            color: #f00;
            font-weight: bold;
        }

        .field-validation-error {
            color: #f00;
        }

        .table-hover tbody tr:hover td {
            background-color: #fe9;
        }
    </style>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                        <i class="fas fa-building"></i>&nbsp;&nbsp;Trang Quản trị
                    </a>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">Quản lý Loại phòng <span class="sr-only">(current)</span></a></li>
                        <li><a href="#">Quản lý Phòng</a></li>
                        <li><a href="#">Quản lý Tài khoản</a></li>
                        <li><a href="#">Quản lý Khách hàng</a></li>
                    </ul>
                    
                    <ul class="nav navbar-nav navbar-right">
                        @if (Html.IsLogged() == false)
                        {
                            <li><a href="@Url.Action("Register", "Account")">Đăng ký</a></li>
                            <li><a href="@Url.Action("Login", "Account")">Đăng nhập Admin</a></li>
                        }
                        else
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Html.GetUserName() <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="@Url.Action("Profile", "Account")"><i class="fa fa-user" aria-hidden="true"></i> Thông tin cá nhân</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a id="logoutLink" href="javascript:void"><i class="fas fa-sign-out-alt"></i> Thoát</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
        <form id="frmLogout" method="post" action="@Url.Action("Logout", "Account")"></form>
        <div class="row">
            <div class="col-md-3">
                @*<div class="panel panel-primary">
                        <div class="panel-heading">Danh mục phòng</div>
                        @Html.Action("GetList", "Category")
                    </div>*@
                <div class="panel panel-primary">
                    <div class="panel-heading">Quản lý Khách sạn</div>
                    @*<a href="@Url.Action("QuanLyCatChoNV", "Employ")" class="list-group-item">Danh mục phòng</a>*@
                    <a href="@Url.Action("QuanLyRoomChoNV", "Employ")" class="list-group-item">Danh sách phòng</a>
                </div>
                <div class="panel panel-primary">
                    <div class="panel-heading">Quản lý Khách hàng</div>
                    <a href="@Url.Action("QuanLyRoomChoNV", "Employ")" class="list-group-item">Danh sách khách hàng</a>
                </div>
            </div>
            <div class="col-md-9">
                <div class="panel panel-primary">
                    <div class="panel-heading">@RenderSection("ContentHeader")</div>
                    <div class="panel-body">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        <footer>
            Copyright &copy; @DateTime.Now.Year
        </footer>
    </div>
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script defer src="~/Content/js/fontawesome-all.js"></script>
    <script type="text/javascript">
        $('#logoutLink').on('click', function () {
            $('#frmLogout').submit();
        });
    </script>
    @if (IsSectionDefined("script"))
    {
        @RenderSection("script")
    }
</body>
</html>


