@using MVCQLKS.Models

@model UserInfo

@section style{
    <style type="text/css">
        .error {
            color: red;
        }
    </style>
}

@section ContentHeader{
    Đăng nhập Tài khoản
}

<div class="row">
    @if (ViewBag.ErrorMsg != null)
    {
        <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Warning!</strong> @ViewBag.ErrorMsg
        </div>
    }
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", id = "frmLogin" }))
    {
        <div class="control-group">
            @Html.LabelFor(m => m.UserName, "Tên Đăng nhập:", new { @class = "col-sm-4 control-label" })
            <div class="col-sm-6 form-control-static">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Username" })
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => m.Password, "Mật khẩu:", new { @class = "col-sm-4 control-label" })
            <div class="col-sm-6 form-control-static">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-6">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(m => m.RememberMe)
                        Remember me
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-6 form-control-static">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-check"></i>
                    Đăng nhập
                </button>
            </div>
        </div>
                    }
</div>

@section script{
    <script src="~/Content/js/jquery.validate.min.js"></script>
    <script src="~/Content/js/alert.js"></script>
    <script type="text/javascript">
        $("#frmLogin").validate({
            rules: {
                UserName: "required",
                Password: "required"
            },
            messages: {
                UserName: "Bạn cần điền Tên Đăng nhập!",
                Password: "Bạn cần điền Mật khẩu!"
            }
        });
    </script>
}

