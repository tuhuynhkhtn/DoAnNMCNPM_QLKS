@using MVCQLKS.Models
@using BotDetect.Web.Mvc;

@model UserRegisting

@section style{
    <link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css" />
    <style type="text/css">
        .error{
            color: red;
        }
    </style>
}

@section ContentHeader{
    Đăng ký Tài khoản
}

<div class="row">
    @if (ViewBag.ErrorMsg != null)
    {
        <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Warning!</strong> @ViewBag.ErrorMsg
        </div>
    }
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", id = "frmRegister" }))
    {
        <div class="control-group">
            @Html.LabelFor(m => m.UserName, "Tên Đăng nhập:", new { @class = "col-sm-4 control-label" })
            <div class="col-sm-6 form-control-static">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Username" })
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => m.Password, "Mật khẩu:", new { @class = "col-sm-4 control-label" })
            <div class="col-sm-6 form-control-static">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => m.ConfirmPassword, "Nhập lại Mật khẩu:", new { @class = "col-sm-4 control-label" })
            <div class="col-sm-6 form-control-static">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm" })
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => m.Name, "Họ tên:", new { @class = "col-sm-4 control-label" })
            <div class="col-sm-6 form-control-static">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-6">
                @{ MvcCaptcha exampleCaptcha = new MvcCaptcha("ExampleCaptcha"); }
                @Html.Captcha(exampleCaptcha)
                
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label" for="CaptchaCode">Captcha:</label>
            <div class="col-sm-7">
                @Html.TextBox("CaptchaCode")
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-6 form-control-static">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-check"></i>
                    Đăng ký
                </button>
            </div>
        </div>
    }
</div>

@section script{
    <script src="~/Content/js/jquery.validate.min.js"></script>
    <script type="text/javascript">
        $("#frmRegister").validate({
            rules: {
                UserName: "required",
                Password: {
                    required: true,
                    minlength: 4
                },
                ConfirmPassword: "required",
                Name: "required",
            },
            messages: {
                UserName: "Bạn cần điền Tên Đăng nhập!",
                Password: {
                    required: "Bạn cần điền Mật khẩu!",
                    minlength: "Mật khẩu phải ít nhất 4 ký tự!"
                },
                ConfirmPassword: "Bạn cần xác nhận lại Mật khẩu!",
                Name: "Bạn cần nhập Họ và tên!"
            }
        });
    </script>
}


